<div class="small-card">
  <%= cl_image_tag vehicle.images.first.key%>
  <div class="small-card-infos">
    <div>
      <h2><%=vehicle.model%></h2>
      <p><%=vehicle.brand%></p>
      <p><%=vehicle.vehicle_type.capitalize%></p>
    </div>
    <h2 class="small-card-pricing">$<%= number_with_delimiter(vehicle.price_day.round) %> / Day</h2>
  </div>
  <%= link_to "", vehicle_path(vehicle), class: 'card-vehicle-link' %>
</div>
