<div class="review-card">
  <div class="d-flex star-rating gap-1">
    <% review.rating.times do %>
      <i class="fas fa-star"></i>
    <% end %>
    <% (5 - review.rating).times do %>
      <i class="far fa-star"></i>
    <% end %>
  </div>
  <div class="mt-3 fs-6">
    <p><%= review.content %></p>
  </div>
</div>
